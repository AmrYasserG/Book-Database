    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Want to Read List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
        <a class="navbar-brand" style="color: rgb(191, 255, 161)">Want to Read List</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            </ul>
            <form method="POST" action='/search' class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" name="Search" type="search" placeholder="Search"
                    aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
        <%if(wantToRead.includes("mockingbird") ){ %>
            <div class="container1">
                <img id="image" src="/mockingbird.jpg" width="193" height="300">
                <br>
                <label id="label2" class="ml-4 my-2">To Kill a Mockingbird</label>
                <br>
                <button onclick="location.href = '/mockingbird';" id="mockingbird" class="btn btn-secondary ml-3"> View
                </button>
            </div>
            <%}%>
                <%if(wantToRead.includes("dune") ){ %>
                    <<div class="container2">
                        <img id="image" src="/dune.jpg" width="193" height="300">
                        <br>
                        <label id="label1" class="ml-4 my-2">Dune</label>
                        <br>
                        <button onclick="location.href = '/dune';" id="dune" class="btn btn-secondary ml-3"> View
                        </button>
                        </div>
                        <%}%>
                            <%if(wantToRead.includes("flies")){ %>
                                <div class="container3">
                                    <img id="image" src="/flies.jpg" width="193" height="300">
                                    <br>
                                    <label id="label1" class="ml-4 my-2">Lord of the Flies</label>
                                    <br>
                                    <button onclick="location.href = '/flies';" id="flies"
                                        class="btn btn-secondary ml-3"> View </button>
                                </div>
                                <%}%>
                                    <%if(wantToRead.includes("grapes") ){ %>
                                        <div class="container4">
                                            <img id="image" src="/grapes.jpg" width="193" height="300">
                                            <br>
                                            <label id="label2" class="ml-4 my-2">The Grapes of Wrath</label>
                                            <br>
                                            <button onclick="location.href = '/grapes';" id="grapes"
                                                class="btn btn-secondary ml-3"> View </button>
                                        </div>
                                        <%}%>
                                            <%if(wantToRead.includes("leaves") ){ %>
                                                <div class="container5">
                                                    <img id="image" src="/leaves.jpg" width="193" height="300">
                                                    <br>
                                                    <label id="label1" class="ml-4 my-2">Leaves of Grass</label>
                                                    <br>
                                                    <button onclick="location.href = '/leaves';" id="leaves"
                                                        class="btn btn-secondary ml-3"> View </button>
                                                </div>
                                                <%}%>
                                                    <%if(wantToRead.includes("sun") ){ %>
                                                        <div class="container6">
                                                            <img id="image" src="/sun.jpg" width="193" height="300">
